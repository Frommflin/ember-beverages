
<h1>{{yield}}</h1>
{{#unless @isFav}}
    <button type="button" {{ on 'click' this.getBeverageList }} >Show 10 beverages</button>
{{/unless}}
<div class="flex-page">
  {{#if @isFav}}
  <BeverageList @isFavorite={{@isFav}} @firstVisit={{false}} @model={{@model}} @checkBev={{this.showBeverageDetails}}/>
  {{else}}
  <BeverageList @isFavorite={{@isFav}} @firstVisit={{this.justLoaded}} @model={{this.beverageList}} @checkBev={{this.showBeverageDetails}}/>
  {{/if}}
  <BeverageDetails @isFavorite={{this.favMarked}} @beverageId={{this.id}} @beverage={{this.beverage}} @clearDetails={{this.showBeverageDetails}} @favState={{this.checkFavState}} />
</div>
