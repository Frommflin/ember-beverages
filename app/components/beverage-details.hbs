
<div class="beverage-details">
  {{#if @beverageId}}
    <img src="{{@beverage.image_url}}" alt="{{@beverage.name}}">
    <h2>{{@beverage.name}}</h2>
    <p>{{@beverage.description}}</p>
    <div class="details">
      <span>Volume: </span> {{@beverage.volume.value}} {{@beverage.volume.unit}}
    </div>
    <div class="details">
      <span>Goes well with: </span> {{@beverage.food_pairing}}
    </div>
    <div class="details">
      <span>Brewer's tips: </span> {{@beverage.brewers_tips}}
    </div>
    {{#if @isFavourite}}
      <button type="button" {{on 'click' ( fn this.removeFavourite @beverage ) }} {{on 'click' ( fn @clearDetails 0 ) }}>Remove from Favourites</button>
    {{else}}
      <button type="button" {{on 'click' ( fn this.saveFavourite @beverage )}}>Save as Favourite</button>
    {{/if}}
  {{else}}
    <div>Click on a beverage to show some details</div>
  {{/if}}
</div>
